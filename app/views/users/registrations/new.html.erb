<h2 devise-title>新規登録</h2>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="field">
    <%= f.label :名前（姓、名） %><br />
    <%= f.text_field :name ,autofocus: true, placeholder: "三振　太郎" %></div>
  </div>

  <div class="field">
    <%= f.label :名前（カナ） %><br />
    <%= f.text_field :name_kana, placeholder: "サンプル　タロウ" %></div>
  </div>

  <div class="field">
    <%= f.label :郵便番号 %><br />
    <%= f.text_field :postal_code, placeholder: "1112222（ハイフン不要）" %></div>
  </div>

  <div class="field">
    <%= f.label :住所 %><br />
    <%= f.text_field :address, placeholder: "東京都渋谷区神泉町○○ー○" %></div>
  </div>

  <div class="field">
    <%= f.label :電話番号 %><br />
    <%= f.text_field :tell, placeholder: "00011112222（ハイフン不要）" %></div>
  </div>

　<div class="field">
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email, autocomplete: "email", placeholder: "sample@abc.com" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>
</div>
<%= render "users/shared/links" %>
